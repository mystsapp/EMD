@using Microsoft.AspNetCore.Http
@using EMD.Utilities
@inject IHttpContextAccessor HttpContextAccessor

<aside class="main-sidebar sidebar-dark-navy elevation-4">

    <!-- Brand Logo -->
    <a href="~/lib/index3.html" class="brand-link">
        <img src="~/lib/dist/img/AdminLTELogo.png"
             alt="AdminLTE Logo"
             class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">AdminLTE 3</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/lib/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="Saigontourist">
            </div>
            <div class="info">
                <a href="#" class="d-block">Alexander Pierce</a>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column nav-child-indent" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                with font-awesome or any other icon font library -->
                @* Danh muc thiet bi *@
                <li class="nav-item has-treeview">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>
                            Thống Kê
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a asp-area="" asp-controller="ThongKes" asp-action="TheoNgayBay" class="nav-link" data-toggle="modal" data-target="#theoNgayBayModal">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Theo ngày bay</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="LoaiThietBis" asp-action="Index" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Theo ngày đặt cọc</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="PhanMems" asp-action="Index" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Theo ngày hết hạn</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="LoaiPhanMems" asp-action="Index" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Theo đối tượng booking</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="LoaiPhanMems" asp-action="Index" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Các đoàn chưa hoàn cọc</p>
                            </a>
                        </li>
                    </ul>
                </li>

                @* Danh muc ban giao *@

                @{
                    var roleName = HttpContextAccessor.HttpContext.Session.Get<User>("ssUser").Role.Name.Equals("Admin");
                }
                @if (roleName)
                {
                    <li class="nav-item has-treeview">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-tachometer-alt"></i>
                            <p>
                                Account & Role
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Users" asp-action="Index" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Account</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Role</p>
                                </a>
                            </li>


                        </ul>
                    </li>
                }




            </ul>

        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>
<partial name="~/Views/Shared/_TheoNgayBay.cshtml" />
