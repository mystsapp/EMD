@*@model IEnumerable<User>*@

@model UserViewModel

@{
    ViewData["Title"] = "Index";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                @*<a class="btn btn-outline-info" asp-action="Create"><i class="fas fa-plus"></i>&nbsp; Thêm Mới</a>*@
                <a class="btn btn-outline-info" asp-action="Create" asp-route-strUrl="@Model.StrUrl" title="Thêm mới"><i class="fas fa-plus"></i>&nbsp; Thêm Mới</a>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/EMDs/Index">Home</a></li>
                    <li class="breadcrumb-item active">Account</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-list-alt text-info"></i> Danh Sách Account</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">

            <div style="overflow-x:auto;">
                <table class="table mytable text-nowrap" id="listUser">
                    <thead>
                        <tr class="table-info">
                            <th>#</th>
                            <th>@Html.DisplayNameFor(m => m.Users.FirstOrDefault().Name)</th>
                            <th>@Html.DisplayNameFor(m => m.Users.FirstOrDefault().Username)</th>
                            <th>@Html.DisplayNameFor(m => m.Users.FirstOrDefault().RoleId)</th>
                            <th>@Html.DisplayNameFor(m => m.Users.FirstOrDefault().PhongBan)</th>
                            <th>@Html.DisplayNameFor(m => m.Users.FirstOrDefault().ChiNhanhId)</th>
                            <th>@Html.DisplayNameFor(m => m.Users.FirstOrDefault().DMDaiLy)</th>
                            <th>@Html.DisplayNameFor(m => m.Users.FirstOrDefault().Khoi)</th>
                            <th>@Html.DisplayNameFor(m => m.Users.FirstOrDefault().TrangThai)</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Users)
                        {
                            <tr>

                                <td>
                                    <div class="btn-group text-white" role="group">

                                        <a class="text-primary" title="Cập nhật" asp-action="Edit" asp-route-id="@item.Id" asp-route-strUrl="@Model.StrUrl"><i class="fas fa-edit"></i></a>
                                        <span class="text-dark"> | </span>

                                        <a class="text-success" title="Chi tiết" asp-action="Details" asp-route-id="@item.Id" asp-route-strUrl="@Model.StrUrl"><i class="fas fa-list"></i></a>
                                        <span class="text-dark"> | </span>

                                        <form asp-action="Delete" asp-route-id="@item.Id" asp-route-strUrl="@Model.StrUrl" method="post">

                                            <span id="confirmDeleteSpan_@item.Id" style="display: none">
                                                <span class="text-dark">Xóa?</span>
                                                <button type="submit" class="btn btn-danger btn-xs">Yes</button>
                                                <button type="button" class="btn btn-primary btn-xs" onclick="confirmDelete('@item.Id', false)">No</button>
                                            </span>

                                            <span id="deleteSpan_@item.Id">

                                                <button title="Xóa" type="button" class="text-danger border-0 bg-transparent " onclick="confirmDelete('@item.Id', true)"><i class="fas fa-trash-alt"></i></button>
                                            </span>
                                        </form>
                                    </div>
                                </td>

                                <td>@Html.DisplayFor(m => item.Name)</td>
                                <td>@Html.DisplayFor(m => item.Username)</td>
                                <td>@Html.DisplayFor(m => item.Role.Name)</td>
                                <td>@Html.DisplayFor(m => item.PhongBan)</td>
                                <td>@Html.DisplayFor(m => item.ChiNhanh.MaChiNhanh)</td>
                                <td>@Html.DisplayFor(m => item.DMDaiLy)</td>
                                <td>@Html.DisplayFor(m => item.Khoi)</td>
                                <td>
                                    @if (item.TrangThai == true)
                                    {
                                        <span class="badge badge-success">Kích hoạt</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Khóa</span>
                                    }

                                </td>

                                @*<partial name="_TableButtonPartial" model="item.Id">*@

                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section Scripts{
    <script>

        $(function () {
            //$("#datepicker").datepicker({
            //    dateFormat: 'dd/mm/yy'
            //});

            $('#listUser').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
            });
        });
    </script>


    @*<script src="~/js/Admin/NganhNghe/indexController.js"></script>*@

    <script>
        function confirmDelete(uniqueId, isDeleteClicked) {
            var deleteSpan = 'deleteSpan_' + uniqueId;
            var confirmDeleteSpan = 'confirmDeleteSpan_' + uniqueId;

            if (isDeleteClicked) {
                $('#' + deleteSpan).hide();
                $('#' + confirmDeleteSpan).show();
            } else {
                $('#' + deleteSpan).show();
                $('#' + confirmDeleteSpan).hide();
            }
        }
    </script>


