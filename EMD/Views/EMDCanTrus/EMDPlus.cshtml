@model EMDCanTruViewModel
@{
    ViewData["Title"] = "EMDPlus";
}



<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm Mới EMD Cấn trừ</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="EMDCanTrus" asp-route-strUrl="@Model.StrUrl" asp-action="DetailsRedirect">Danh Sách Đặt Cọc</a></li>
                    <li class="breadcrumb-item active">Thêm Mới Đặt Cọc</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-file text-info"></i> EMD - <b>@Model.EMDTbl.Number</b></h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">


            <form method="post" autocomplete="off">
                <div class="p-4 border rounded">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row">

                        <input type="hidden" asp-for="EMDCanTru.OldNumber" value="@Model.EMDTbl.Number" /> @* EMD Old *@

                        <div class="col-3">
                            <label asp-for="EMDCanTru.Number" class="control-label"></label>
                            <input asp-for="EMDCanTru.Number" class="form-control" id="txtNumber" />
                            <span asp-validation-for="EMDCanTru.Number" class="text-danger"></span>
                        </div>

                        <div class="col-3">
                            <label asp-for="EMDCanTru.STDatCoc" class="control-label"></label>
                            <input asp-for="EMDCanTru.STDatCoc" class="form-control numbers" id="txtNumber" />
                            <span asp-validation-for="EMDCanTru.STDatCoc" class="text-danger"></span>
                        </div>

                        <div class="col-3">
                            <label asp-for="EMDCanTru.LoaiBK" class="control-label"></label>
                            <input asp-for="EMDCanTru.LoaiBK" class="form-control" id="txtLoaiBK" />
                            <span asp-validation-for="EMDCanTru.LoaiBK" class="text-danger"></span>
                        </div>

                        @*<div class="col-3">
                            <label asp-for="EMDCanTru.TimThay" class="control-label"></label>
                            <br />
                            <input type="checkbox" asp-for="EMDCanTru.TimThay" id="txtTimThay" />
                            <span asp-validation-for="EMDCanTru.TimThay" class="text-danger"></span>
                        </div>*@


                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i></button>
                        <a class="btn btn-success" asp-controller="EMDCanTrus" asp-route-strUrl="@Model.StrUrl" asp-action="DetailsRedirect"><i class="fas fa-backward"></i></a>
                        
                    </div>
                </div>
            </form>



        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

@section Scripts{
    @*<script>

            $(function () {
                $(".datepicker").datepicker({
                    dateFormat: 'dd/mm/yy'
                });
            });
        </script>*@
    <script src="~/js/Admin/EMDCanTru/createController.js"></script>
}