@model EMDViewModel

@using X.PagedList;
@using X.PagedList.Mvc.Core
@using X.PagedList.Mvc.Core.Common

@{
    ViewData["Title"] = "Index";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <a class="btn btn-outline-info" asp-action="Create" asp-route-strUrl="@Model.StrUrl"><i class="fas fa-plus"></i>&nbsp; Thêm Mới</a>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">EMD</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Tim Kiem -->
<!-- /.content -->
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-list-alt text-info"></i> Danh Sách Đặt Cọc</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <form method="get" autocomplete="off">

                <div class="container" style="padding-bottom:10px; background-color: aliceblue;" id="search">
                    @* we will add search criteria *@

                    <div class="col-12">
                        <div class="row" style="padding-top: 10px;">

                            <div class="col-2">
                                Nhập thông tin
                            </div>
                            <div class="col-md-3">
                                @*@Html.Editor("searchName", new { htmlAttributes = new { @class = "form-control", @value="@ViewData["currentFilter"]" } })*@
                                <input class="form-control" name="searchString" value="@ViewBag.searchString" />
                            </div>

                            <div class="col-md-2">
                                Ngày DC
                            </div>

                            <div class="col-md-3">
                                <input class="form-control maskInput" name="searchDate" value="@ViewBag.searchDate" />
                            </div>

                            <!-- click row and submit to index -->
                            <input type="hidden" name="id" id="hidId" />
                            <input type="hidden" name="page" id="hidPage" />

                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary form-control" id="btnSubmit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <br />
            <div style="overflow-x:auto;">
                <table class="table mytable text-nowrap tblEMD" id="listAll">
                    <thead>
                        <tr class="table-info">
                            <th>#</th>
                            <th>@Html.DisplayNameFor(m => m.EMDTbls.FirstOrDefault().Number)</th>
                            <th>@Html.DisplayNameFor(m => m.EMDTbls.FirstOrDefault().SGTCode)</th>
                            <th>@Html.DisplayNameFor(m => m.EMDTbls.FirstOrDefault().BatDau)</th>
                            <th>@Html.DisplayNameFor(m => m.EMDTbls.FirstOrDefault().KetThuc)</th>
                            <th>@Html.DisplayNameFor(m => m.EMDTbls.FirstOrDefault().SLVeDatCoc)</th>
                            <th>@Html.DisplayNameFor(m => m.EMDTbls.FirstOrDefault().PNR)</th>
                            <th>@Html.DisplayNameFor(m => m.EMDTbls.FirstOrDefault().NgayDC)</th>

                            <th>@Html.DisplayNameFor(m => m.EMDTbls.FirstOrDefault().HetHan)</th>
                            <th>@Html.DisplayNameFor(m => m.EMDTbls.FirstOrDefault().HangHK)</th>
                            <th>@Html.DisplayNameFor(m => m.EMDTbls.FirstOrDefault().STDatCoc)</th>
                            <th>@Html.DisplayNameFor(m => m.EMDTbls.FirstOrDefault().HoanCoc)</th>
                            <th>@Html.DisplayNameFor(m => m.EMDTbls.FirstOrDefault().LoaiTien)</th>
                            <th>@Html.DisplayNameFor(m => m.EMDTbls.FirstOrDefault().TyGia)</th>

                            <th>@Html.DisplayNameFor(m => m.EMDTbls.FirstOrDefault().LoaiBK)</th>
                            <th>@Html.DisplayNameFor(m => m.EMDTbls.FirstOrDefault().SLVeDaXuat)</th>
                            <th>@Html.DisplayNameFor(m => m.EMDTbls.FirstOrDefault().TienXuatVe)</th>
                            <th>@Html.DisplayNameFor(m => m.EMDTbls.FirstOrDefault().GhiChu)</th>
                            <th>@Html.DisplayNameFor(m => m.EMDTbls.FirstOrDefault().TienPhat)</th>
                            <th>@Html.DisplayNameFor(m => m.EMDTbls.FirstOrDefault().NgayPhat)</th>

                            <th>@Html.DisplayNameFor(m => m.EMDTbls.FirstOrDefault().SoCTPhat)</th>
                            <th>@Html.DisplayNameFor(m => m.EMDTbls.FirstOrDefault().DongHoSo)</th>
                            <th>@Html.DisplayNameFor(m => m.EMDTbls.FirstOrDefault().NguoiNhap)</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.EMDTbls)
                        {

                            <tr id="emd_@item.Id" class="cursor-pointer"data-cantru="@item.CanTru">

                                <td @*style="width:150px;"*@>
                                    <div class="btn-group text-white" role="group">
                                        <a class="btn btn-info btn-sm" title="EMD cấn trừ" asp-controller="EMDCanTrus" asp-action="EMDPlus" asp-route-emdOldId="@item.Id" asp-route-strUrl="@Model.StrUrl"><i class="fas fa-plus-square"></i></a>
                                        <a class="btn btn-primary btn-sm" title="Cập nhật" asp-action="Edit" asp-route-id="@item.Id" asp-route-strUrl="@Model.StrUrl"><i class="fas fa-edit"></i></a>
                                        <a class="btn btn-success btn-sm" title="Chi tiết" asp-action="Details" asp-route-id="@item.Id" asp-route-strUrl="@Model.StrUrl"><i class="fas fa-list"></i></a>
                                        @*<a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@Model"><i class="fas fa-trash-alt"></i></a>*@

                                        <form asp-action="Delete" asp-route-id="@item.Id" asp-route-strUrl="@Model.StrUrl" method="post">

                                            <span id="confirmDeleteSpan_@item.Id" style="display: none">
                                                <span class="text-light">Xóa?</span>
                                                <button type="submit" class="btn btn-danger">Yes</button>
                                                <button type="button" class="btn btn-primary" onclick="confirmDelete('@item.Id', false)">No</button>
                                            </span>

                                            <span id="deleteSpan_@item.Id">
                                                <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete('@item.Id', true)"><i class="fas fa-trash-alt"></i></button>
                                            </span>
                                        </form>
                                    </div>
                                </td>

                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.Number)</td>
                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.SGTCode)</td>
                                @*@<td>Html.DisplayFor(m => item.BatDau)</td>*@
                                <td class="tdVal" data-id="@item.Id">@Html.Raw(item.BatDau.Value.ToShortDateString())</td>
                                <td class="tdVal" data-id="@item.Id">@Html.Raw(item.KetThuc.Value.ToShortDateString())</td>
                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.SLVeDatCoc)</td>
                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.PNR)</td>
                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.NgayDC)</td>

                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.HetHan)</td>
                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.HangHK)</td>
                                @*  class="tdVal" data-id="@item.Id"<td>@Html.DisplayFor(m => item.STDatCoc)</td>*@
                                <td class="tdVal" data-id="@item.Id">@Html.Raw(item.STDatCoc.ToString("N0"))</td>
                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.HoanCoc)</td>
                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.LoaiTien)</td>
                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.TyGia)</td>

                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.LoaiBK)</td>
                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.SLVeDaXuat)</td>
                                <td class="tdVal" data-id="@item.Id">@Html.Raw(item.TienXuatVe.Value.ToString("N0"))</td>
                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.GhiChu)</td>
                                <td class="tdVal" data-id="@item.Id">@Html.Raw(item.TienPhat.ToString("N0"))</td>
                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.NgayPhat)</td>

                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.SoCTPhat)</td>
                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.DongHoSo)</td>
                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.NguoiNhap)</td>

                            </tr>

                        }
                    </tbody>

                </table>
            </div>

            @if (Model.EMDTbls != null)
            {
                @Html.PagedListPager((IPagedList)Model.EMDTbls, page => Url.Action("Index", new
           {
               page = page,
               option = Context.Request.Query["option"],
               searchString = @ViewBag.searchString,
               searchDate = @ViewBag.searchDate
           }),
                    PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new PagedListRenderOptions
                    {
                        LiElementClasses = new string[] { "page-item" },
                        PageClasses = new string[] { "page-link" },
                        MaximumPageNumbersToDisplay = 5,
                        UlElementClasses = new[] { "pagination" },
                        ContainerDivClasses = new[] { "pagination-container" }
                    }, new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "nameListContainer" }))
            }
        </div>
        <!-- /.card-body -->
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
<!-- Main content -->
